# =====================================================
# MINGUS DEVELOPMENT ENVIRONMENT
# =====================================================
# Copy this file to .env and update with your development values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DATABASE_URL=postgresql://mingus:password@db:5432/mingus

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =====================================================
# SECURITY KEYS (Development - Change in Production)
# =====================================================
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production

# =====================================================
# OPENAI CONFIGURATION
# =====================================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1

# =====================================================
# EMAIL PROCESSING
# =====================================================
MAC_EMAIL_ADDRESS=your_email@mac.com
MAC_EMAIL_APP_PASSWORD=your-app-specific-password
EMAIL_PROCESSING_RATE_LIMIT=2
EMAIL_BATCH_SIZE=50

# =====================================================
# ARTICLE PROCESSING
# =====================================================
ARTICLE_SCRAPING_DELAY=1
ARTICLE_CONTENT_MAX_SIZE=50000
ARTICLE_QUALITY_THRESHOLD=0.7
CULTURAL_RELEVANCE_THRESHOLD=6.0

# =====================================================
# SEARCH CONFIGURATION
# =====================================================
SEARCH_RESULTS_PER_PAGE=20
SEARCH_CACHE_TIMEOUT=300
ELASTICSEARCH_URL=http://elasticsearch:9200

# =====================================================
# ASSESSMENT CONFIGURATION
# =====================================================
ASSESSMENT_CACHE_DURATION=3600
BE_INTERMEDIATE_THRESHOLD=60
DO_INTERMEDIATE_THRESHOLD=60
HAVE_INTERMEDIATE_THRESHOLD=60
BE_ADVANCED_THRESHOLD=80
DO_ADVANCED_THRESHOLD=80
HAVE_ADVANCED_THRESHOLD=80

# =====================================================
# FEATURE FLAGS (Development - All Enabled)
# =====================================================
ENABLE_ARTICLE_LIBRARY=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_CULTURAL_PERSONALIZATION=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_SOCIAL_SHARING=true
ENABLE_OFFLINE_READING=false
ENABLE_ANALYTICS=true
ENABLE_ARTICLE_FOLDERS=true
ENABLE_ARTICLE_BOOKMARKS=true
ENABLE_ARTICLE_NOTES=true
ENABLE_ARTICLE_EXPORT=true
ENABLE_ARTICLE_IMPORT=true

# =====================================================
# MONITORING AND ANALYTICS
# =====================================================
ENABLE_ARTICLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30
LOG_LEVEL=DEBUG
SENTRY_DSN=

# =====================================================
# PERFORMANCE CONFIGURATION (Development)
# =====================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=mingus_articles_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=0

# =====================================================
# SECURITY CONFIGURATION (Development - Relaxed)
# =====================================================
RATE_LIMIT_STORAGE_URL=redis://redis:6379/1
DEFAULT_RATE_LIMIT=1000/hour
SEARCH_RATE_LIMIT=100/minute
API_RATE_LIMIT=5000/hour

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_APP=app.py

# =====================================================
# DEVELOPMENT SETTINGS
# =====================================================
# Enable hot reloading
FLASK_RUN_RELOAD=true
FLASK_RUN_EXTRA_FILES=backend/,frontend/

# Enable detailed error pages
FLASK_DEBUG_TB_INTERCEPT_REDIRECTS=false

# Development database settings
DATABASE_ECHO=true
DATABASE_POOL_PRE_PING=true

# Development logging
LOG_FORMAT=detailed
LOG_TO_CONSOLE=true

# Development testing
TESTING=false
TEST_DATABASE_URL=postgresql://mingus:password@db:5432/mingus_test

# Development frontend settings
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_WS_BASE_URL=ws://localhost:5000
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# Development external services (optional)
# GOOGLE_ANALYTICS_ID=
# MIXPANEL_TOKEN=
# HOTJAR_ID=
# CRISP_CHAT_ID=

# Development CDN (optional - use local files)
# CDN_URL=
# STATIC_URL=
# IMAGE_CDN_URL=
