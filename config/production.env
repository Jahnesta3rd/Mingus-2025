# =====================================================
# MINGUS PRODUCTION ENVIRONMENT
# =====================================================
# Copy this file to .env and update with your production values

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://mingus:your-secure-postgres-password-here@postgres:5432/mingus

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# =====================================================
# SECURITY KEYS
# =====================================================
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production

# =====================================================
# OPENAI CONFIGURATION
# =====================================================
OPENAI_API_KEY=sk-proj-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1

# =====================================================
# EMAIL PROCESSING
# =====================================================
MAC_EMAIL_ADDRESS=your_email@mac.com
MAC_EMAIL_APP_PASSWORD=your-app-specific-password
EMAIL_PROCESSING_RATE_LIMIT=2
EMAIL_BATCH_SIZE=50

# =====================================================
# ARTICLE PROCESSING
# =====================================================
ARTICLE_SCRAPING_DELAY=2
ARTICLE_CONTENT_MAX_SIZE=50000
ARTICLE_QUALITY_THRESHOLD=0.7
CULTURAL_RELEVANCE_THRESHOLD=6.0

# =====================================================
# SEARCH CONFIGURATION
# =====================================================
SEARCH_RESULTS_PER_PAGE=20
SEARCH_CACHE_TIMEOUT=3600
ELASTICSEARCH_URL=http://elasticsearch:9200

# =====================================================
# ASSESSMENT CONFIGURATION
# =====================================================
ASSESSMENT_CACHE_DURATION=7200
BE_INTERMEDIATE_THRESHOLD=60
DO_INTERMEDIATE_THRESHOLD=60
HAVE_INTERMEDIATE_THRESHOLD=60
BE_ADVANCED_THRESHOLD=80
DO_ADVANCED_THRESHOLD=80
HAVE_ADVANCED_THRESHOLD=80

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_ARTICLE_LIBRARY=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_CULTURAL_PERSONALIZATION=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_SOCIAL_SHARING=true
ENABLE_OFFLINE_READING=false
ENABLE_ANALYTICS=true
ENABLE_ARTICLE_FOLDERS=true
ENABLE_ARTICLE_BOOKMARKS=true
ENABLE_ARTICLE_NOTES=true
ENABLE_ARTICLE_EXPORT=true
ENABLE_ARTICLE_IMPORT=true

# =====================================================
# MONITORING AND ANALYTICS
# =====================================================
ENABLE_ARTICLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# =====================================================
# PERFORMANCE CONFIGURATION
# =====================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=mingus_articles
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
RATE_LIMIT_STORAGE_URL=redis://redis:6379/1
DEFAULT_RATE_LIMIT=100/hour
SEARCH_RATE_LIMIT=30/minute
API_RATE_LIMIT=1000/hour

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_APP=app.py

# =====================================================
# MONITORING PASSWORDS
# =====================================================
GRAFANA_PASSWORD=your-grafana-admin-password

# =====================================================
# EXTERNAL SERVICES (Optional)
# =====================================================
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# MIXPANEL_TOKEN=your-mixpanel-token
# HOTJAR_ID=your-hotjar-id
# CRISP_CHAT_ID=your-crisp-chat-id

# =====================================================
# CDN AND STATIC ASSETS (Optional)
# =====================================================
# CDN_URL=https://your-cdn-domain.com
# STATIC_URL=https://your-static-domain.com
# IMAGE_CDN_URL=https://your-image-cdn.com

# =====================================================
# SSL/TLS CONFIGURATION (Optional)
# =====================================================
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem
