# =====================================================
# MINGUS ARTICLE LIBRARY - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control

# =====================================================
# EXISTING MINGUS CONFIGURATION
# =====================================================
DATABASE_URL=postgresql://user:password@localhost/mingus
REDIS_URL=redis://localhost:6379
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key

# =====================================================
# APPLICATION CORE SETTINGS
# =====================================================
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_APP=backend.app:create_app()

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
# Database Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0
DB_POOL_RECYCLE=3600
DB_POOL_TIMEOUT=30

# Database Performance Settings
DB_STATEMENT_TIMEOUT=30000
DB_IDLE_TIMEOUT=60000
DB_LOCK_TIMEOUT=10000

# =====================================================
# ARTICLE LIBRARY CONFIGURATION
# =====================================================
OPENAI_API_KEY=sk-proj-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1

# =====================================================
# EMAIL PROCESSING
# =====================================================
MAC_EMAIL_ADDRESS=your_email@mac.com
MAC_EMAIL_APP_PASSWORD=your-app-specific-password
EMAIL_PROCESSING_RATE_LIMIT=2
EMAIL_BATCH_SIZE=50

# =====================================================
# REDIS CACHING CONFIGURATION
# =====================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false

# Cache Settings
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/1
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=mingus_articles_

# =====================================================
# BACKGROUND TASKS
# =====================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ROUTES={}

# =====================================================
# FRONTEND CONFIGURATION
# =====================================================
REACT_APP_API_BASE_URL=http://localhost:5000/api
REACT_APP_ENVIRONMENT=development

# =====================================================
# CORS AND SECURITY SETTINGS
# =====================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With

# Session Security
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# =====================================================
# SUPABASE INTEGRATION (Existing)
# =====================================================
SUPABASE_URL=your-supabase-project-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# =====================================================
# EMAIL SERVICES (Existing)
# =====================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@mingusapp.com

# Resend Email Service
EMAIL_PROVIDER=resend
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@mingusapp.com
RESEND_FROM_NAME=MINGUS Financial Wellness

# =====================================================
# PAYMENT PROCESSING (Existing)
# =====================================================
STRIPE_ENVIRONMENT=test
STRIPE_TEST_SECRET_KEY=your-stripe-test-secret-key
STRIPE_TEST_PUBLISHABLE_KEY=your-stripe-test-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# =====================================================
# FINANCIAL DATA (Existing)
# =====================================================
PLAID_ENVIRONMENT=sandbox
PLAID_SANDBOX_CLIENT_ID=your-plaid-client-id
PLAID_SANDBOX_SECRET=your-plaid-sandbox-secret

# =====================================================
# MONITORING AND ANALYTICS
# =====================================================
ENABLE_ARTICLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here  # Error tracking

# =====================================================
# ARTICLE PROCESSING
# =====================================================
ARTICLE_SCRAPING_DELAY=2
ARTICLE_CONTENT_MAX_SIZE=50000
ARTICLE_QUALITY_THRESHOLD=0.7
CULTURAL_RELEVANCE_THRESHOLD=6.0

# =====================================================
# SEARCH CONFIGURATION
# =====================================================
SEARCH_RESULTS_PER_PAGE=20
SEARCH_CACHE_TIMEOUT=3600
ELASTICSEARCH_URL=http://localhost:9200  # Optional advanced search

# =====================================================
# ASSESSMENT CONFIGURATION
# =====================================================
ASSESSMENT_CACHE_DURATION=7200
BE_INTERMEDIATE_THRESHOLD=60
DO_INTERMEDIATE_THRESHOLD=60
HAVE_INTERMEDIATE_THRESHOLD=60
BE_ADVANCED_THRESHOLD=80
DO_ADVANCED_THRESHOLD=80
HAVE_ADVANCED_THRESHOLD=80

# =====================================================
# PERFORMANCE CONFIGURATION
# =====================================================
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=mingus_articles

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1
DEFAULT_RATE_LIMIT=100/hour
SEARCH_RATE_LIMIT=30/minute
API_RATE_LIMIT=1000/hour

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_CULTURAL_PERSONALIZATION=true
ENABLE_ADVANCED_SEARCH=true
ENABLE_SOCIAL_SHARING=true
ENABLE_OFFLINE_READING=false
