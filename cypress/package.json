{
  "name": "mingus-cypress-tests",
  "version": "1.0.0",
  "description": "E2E tests for Mingus application onboarding workflow",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:onboarding": "cypress run --spec 'cypress/e2e/onboarding-workflow.cy.js'",
    "test:complete-onboarding": "cypress run --spec 'cypress/e2e/complete-onboarding-workflow.cy.js'",
    "test:job-security": "cypress run --spec 'cypress/e2e/job-security-workflow.cy.js'",
    "test:complete-journey": "cypress run --spec 'cypress/e2e/complete-user-journey.cy.js'",
    "test:all": "cypress run",
    "test:headed": "cypress run --headed",
    "test:onboarding:headed": "cypress run --headed --spec 'cypress/e2e/onboarding-workflow.cy.js'",
    "test:journey:headed": "cypress run --headed --spec 'cypress/e2e/complete-user-journey.cy.js'",
    "test:smoke": "cypress run --spec 'cypress/e2e/complete-user-journey.cy.js' --grep 'should complete full user journey'",
    "test:regression": "cypress run --spec 'cypress/e2e/complete-user-journey.cy.js' --grep 'should handle error scenarios'",
    "test:mobile": "cypress run --spec 'cypress/e2e/complete-user-journey.cy.js' --grep 'should test mobile responsiveness'",
    "test:accessibility": "cypress run --spec 'cypress/e2e/complete-user-journey.cy.js' --grep 'should test accessibility features'",
    "test:ci": "cypress run --record --key $CYPRESS_RECORD_KEY",
    "test:parallel": "cypress run --parallel --record --key $CYPRESS_RECORD_KEY"
  },
  "devDependencies": {
    "cypress": "^13.6.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 