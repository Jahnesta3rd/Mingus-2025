{
  "name": "mingus-email-api",
  "version": "1.0.0",
  "description": "Email service API for MINGUS assessment workflow",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:pdf": "node scripts/simple-puppeteer-test.js",
    "test:server": "curl http://localhost:3001/health",
    "generate-pdf": "node -e \"import('./pdfGenerator.js').then(m => m.generatePersonalizedPDF({email:'test@example.com',segment:'balanced',score:25,first_name:'Test',id:'test-123'}).then(console.log))\"",
    "cleanup": "node -e \"import('./pdfGenerator.js').then(m => m.cleanupOldPDFs())\""
  },
  "keywords": [
    "email",
    "api",
    "mingus",
    "finance",
    "assessment",
    "pdf",
    "puppeteer",
    "supabase"
  ],
  "author": "Johnnie Watson",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "resend": "^1.1.0",
    "@supabase/supabase-js": "^2.38.0",
    "puppeteer": "^21.5.2",
    "@microsoft/clarity": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
