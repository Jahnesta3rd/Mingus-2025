# =====================================================
# DATABASE CONFIGURATION - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and update with your actual values
# DO NOT commit the actual .env file to version control

# =====================================================
# POSTGRESQL DATABASE CONFIGURATION
# =====================================================

# Option 1: Full DATABASE_URL (recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/mingus_db

# Option 2: Individual components (alternative)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mingus_db
POSTGRES_USER=mingus_user
POSTGRES_PASSWORD=your_secure_password

# =====================================================
# DATABASE CONNECTION POOL SETTINGS
# =====================================================
# These settings help prevent connection exhaustion and timeouts

# Number of connections to maintain in the pool
DB_POOL_SIZE=20

# Maximum number of connections that can be created beyond pool_size
DB_MAX_OVERFLOW=30

# How long (in seconds) to keep connections in the pool before recycling
DB_POOL_RECYCLE=3600

# Enable connection health checks before use
DB_POOL_PRE_PING=true

# =====================================================
# REDIS CACHE CONFIGURATION
# =====================================================
REDIS_URL=redis://localhost:6379/0

# =====================================================
# FLASK APPLICATION SETTINGS
# =====================================================
FLASK_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-here

# =====================================================
# SECURITY SETTINGS
# =====================================================
# SSL/TLS settings for production
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# =====================================================
# LOGGING CONFIGURATION
# =====================================================
LOG_LEVEL=INFO
LOG_FILE=logs/mingus.log

# =====================================================
# PERFORMANCE MONITORING
# =====================================================
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# =====================================================
# CONNECTION TIMEOUT SETTINGS
# =====================================================
# PostgreSQL connection timeout (seconds)
DB_CONNECT_TIMEOUT=10

# Query timeout (seconds)
DB_QUERY_TIMEOUT=30

# =====================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =====================================================
# Create tables automatically in development
CREATE_TABLES=true

# Enable SQL query logging
SQLALCHEMY_ECHO=false

# =====================================================
# PRODUCTION OVERRIDES
# =====================================================
# Uncomment and modify these for production deployment

# FLASK_ENV=production
# DEBUG=false
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_SAMESITE=Strict
# DB_POOL_SIZE=50
# DB_MAX_OVERFLOW=100
# DB_POOL_RECYCLE=1800
