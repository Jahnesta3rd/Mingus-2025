{
  "layout": "mobile-first",
  "components": [
    {
      "type": "container",
      "id": "mainWrapper",
      "style": {
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "padding": "5vw",
        "maxWidth": "480px",
        "margin": "0 auto"
      }
    },
    {
      "type": "input",
      "id": "emailInput",
      "placeholder": "Email Address",
      "style": {
        "width": "90%",
        "maxWidth": "400px",
        "marginBottom": "16px"
      }
    },
    {
      "type": "input",
      "id": "phoneInput",
      "placeholder": "Phone Number",
      "style": {
        "width": "90%",
        "maxWidth": "400px",
        "marginBottom": "16px"
      }
    },
    {
      "type": "input",
      "id": "zipcodeInput",
      "placeholder": "Zip Code",
      "style": {
        "width": "90%",
        "maxWidth": "400px",
        "marginBottom": "24px"
      }
    },
    {
      "type": "button",
      "id": "continueButton",
      "label": "Continue",
      "style": {
        "width": "90%",
        "maxWidth": "400px",
        "padding": "12px",
        "fontSize": "1rem"
      }
    }
  ],
  "mediaQueries": [
    {
      "condition": "(min-width: 600px)",
      "adjustments": {
        "mainWrapper": {
          "padding": "10vw"
        },
        "continueButton": {
          "fontSize": "1.2rem"
        }
      }
    }
  ],
  "accessibility": {
    "minimumTapTargetHeight": "44px",
    "contrastCompliance": "WCAG AA"
  }
}