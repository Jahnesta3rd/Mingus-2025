# =============================================================================
# MINGUS Development Environment Configuration
# Plaid Integration - Sandbox Environment
# =============================================================================

# =============================================================================
# PL AID CONFIGURATION - DEVELOPMENT/SANDBOX
# =============================================================================

# Environment Selection
PLAID_ENV=sandbox

# Plaid API Credentials - Sandbox Environment
PLAID_SANDBOX_CLIENT_ID=your_sandbox_client_id_here
PLAID_SANDBOX_SECRET=your_sandbox_secret_here

# Webhook Configuration - Development
PLAID_SANDBOX_WEBHOOK_URL=https://your-dev-domain.com/api/plaid/webhook
PLAID_SANDBOX_WEBHOOK_SECRET=your_sandbox_webhook_secret_here

# Redirect URI - Development
PLAID_SANDBOX_REDIRECT_URI=https://your-dev-domain.com/plaid/callback

# Security - Development (Optional for sandbox)
PLAID_SANDBOX_ENCRYPTION_KEY=your_sandbox_encryption_key_here

# =============================================================================
# PL AID PRODUCTION CONFIGURATION (for reference)
# =============================================================================
# These should be set to empty or commented out in development
# PLAID_PRODUCTION_CLIENT_ID=
# PLAID_PRODUCTION_SECRET=
# PLAID_PRODUCTION_WEBHOOK_URL=
# PLAID_PRODUCTION_WEBHOOK_SECRET=
# PLAID_PRODUCTION_REDIRECT_URI=
# PLAID_PRODUCTION_ENCRYPTION_KEY=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_development_secret_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/mingus_dev

# Logging Configuration
LOG_LEVEL=DEBUG
PLAID_LOG_LEVEL=DEBUG

# Performance Configuration
PLAID_REQUEST_TIMEOUT=30
PLAID_MAX_RETRIES=3
PLAID_RETRY_DELAY=1.0

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Enable Plaid Sandbox Features
PLAID_SANDBOX_MODE=True
PLAID_ENABLE_TEST_CREDENTIALS=True

# Development Webhook Testing
PLAID_WEBHOOK_TESTING_ENABLED=True
PLAID_WEBHOOK_TEST_URL=https://webhook.site/your-test-endpoint

# =============================================================================
# MONITORING AND DEBUGGING
# =============================================================================

# Enable Metrics
PLAID_ENABLE_METRICS=True
PLAID_METRICS_ENDPOINT=http://localhost:8125

# Debug Mode
PLAID_DEBUG_MODE=True
PLAID_VERBOSE_LOGGING=True

# =============================================================================
# SECURITY SETTINGS - DEVELOPMENT
# =============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================

# Email Configuration (for webhook notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=True

# Webhook Notification Settings
PLAID_WEBHOOK_NOTIFICATIONS_ENABLED=True
PLAID_WEBHOOK_NOTIFICATION_EMAIL=admin@your-dev-domain.com

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/mingus_test

# Test Plaid Credentials
PLAID_TEST_CLIENT_ID=test_client_id
PLAID_TEST_SECRET=test_secret

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================

# Instructions for setting up development environment:
# 1. Copy this file to .env
# 2. Replace placeholder values with actual credentials
# 3. Set up local PostgreSQL database
# 4. Configure webhook endpoint (use ngrok for local testing)
# 5. Set up Plaid sandbox account and get credentials
# 6. Test webhook delivery using Plaid webhook testing tools

# For local webhook testing with ngrok:
# 1. Install ngrok: https://ngrok.com/
# 2. Run: ngrok http 5000
# 3. Use the ngrok URL as your webhook URL
# 4. Update PLAID_SANDBOX_WEBHOOK_URL with ngrok URL

# Example ngrok webhook URL:
# PLAID_SANDBOX_WEBHOOK_URL=https://abc123.ngrok.io/api/plaid/webhook 