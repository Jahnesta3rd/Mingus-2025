# =====================================================
# MINGUS DEVELOPMENT ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.development and modify as needed
# This configuration is optimized for development with mock services

# =====================================================
# FLASK CONFIGURATION
# =====================================================

# Flask environment
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_APP=backend.app

# Secret key (change in production)
SECRET_KEY=dev-secret-key-change-in-production

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# Database URL for development
DATABASE_URL=postgresql://mingus_user:mingus_password@localhost:5432/mingus_development

# Database connection settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
DB_ECHO=true
DB_ECHO_POOL=false

# =====================================================
# REDIS CONFIGURATION
# =====================================================

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Redis URLs
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# =====================================================
# MOCK SERVICES CONFIGURATION
# =====================================================

# Enable mock services for development
MOCK_TWILIO=true
MOCK_RESEND=true
MOCK_SUPABASE=true

# Mock service logging and storage
MOCK_SERVICES_LOG_TO_FILE=true
MOCK_SERVICES_SAVE_TO_FILESYSTEM=true
MOCK_SERVICES_DIRECTORY=data/mock_services

# =====================================================
# RATE LIMITING CONFIGURATION
# =====================================================

# Rate limiting - relaxed for development
RATELIMIT_ENABLED=false
RATELIMIT_DEFAULT=1000/minute
RATELIMIT_STORAGE_URL=memory://

# Specific rate limits for development
RATELIMIT_API=500/minute
RATELIMIT_AUTH=100/minute
RATELIMIT_SMS=50/minute
RATELIMIT_EMAIL=100/minute
RATELIMIT_UPLOAD=10/minute

# =====================================================
# LOGGING CONFIGURATION
# =====================================================

# Logging settings for development
LOG_LEVEL=DEBUG
LOG_FILE=logs/mingus_dev.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Specialized log files
SQL_QUERY_LOG_FILE=logs/sql_queries.log
CELERY_LOG_FILE=logs/celery_tasks.log
API_LOG_FILE=logs/api_requests.log
AUTH_LOG_FILE=logs/auth_events.log
EMAIL_LOG_FILE=logs/email_events.log
SMS_LOG_FILE=logs/sms_events.log
DB_LOG_FILE=logs/database_events.log
REDIS_LOG_FILE=logs/redis_events.log

# Mock service log files
TWILIO_MOCK_LOG_FILE=logs/mock_twilio.log
RESEND_MOCK_LOG_FILE=logs/mock_resend.log

# =====================================================
# DEBUG AND DEVELOPMENT TOOLS
# =====================================================

# Debug toolbar and profiling
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILER=true
ENABLE_SQL_LOGGING=true
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true

# =====================================================
# TESTING HELPERS
# =====================================================

# Testing and development helpers
BYPASS_AUTH=false
SKIP_EMAIL_VERIFICATION=true
SKIP_PHONE_VERIFICATION=true
ENABLE_TEST_DATA=true

# Test user credentials
TEST_USER_EMAIL=test@mingus.com
TEST_USER_PASSWORD=testpassword123
TEST_USER_PHONE=+1234567890

# =====================================================
# SECURITY SETTINGS (RELAXED FOR DEVELOPMENT)
# =====================================================

# Security settings - relaxed for development
SECURE_SSL_REDIRECT=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=false
WTF_CSRF_ENABLED=false

# CORS settings for development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001,http://localhost:5000,http://127.0.0.1:5000

# =====================================================
# EMAIL CONFIGURATION
# =====================================================

# Email settings for development (MailHog)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@mingus.dev

# Suppress email sending in development
MAIL_SUPPRESS_SEND=true

# =====================================================
# SMS CONFIGURATION
# =====================================================

# Twilio settings for development (mock)
TWILIO_ACCOUNT_SID=dev_account_sid
TWILIO_AUTH_TOKEN=dev_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Mock SMS settings
TWILIO_MOCK_SMS=true

# =====================================================
# RESEND EMAIL CONFIGURATION
# =====================================================

# Resend settings for development (mock)
RESEND_API_KEY=dev_api_key

# Mock email settings
RESEND_MOCK_EMAILS=true

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================

# Supabase settings for development (mock)
SUPABASE_URL=https://dev.supabase.co
SUPABASE_KEY=dev_key
SUPABASE_SERVICE_ROLE_KEY=dev_service_role_key

# Mock Supabase settings
SUPABASE_MOCK_MODE=true
SUPABASE_MOCK_DATA_DIR=data/mock_supabase

# =====================================================
# CACHE CONFIGURATION
# =====================================================

# Cache settings for development
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=mingus_dev

# =====================================================
# SESSION CONFIGURATION
# =====================================================

# Session settings for development
SESSION_TYPE=filesystem
SESSION_FILE_DIR=data/sessions
SESSION_FILE_THRESHOLD=500

# =====================================================
# FILE UPLOAD CONFIGURATION
# =====================================================

# File upload settings for development
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# =====================================================
# FEATURE FLAGS
# =====================================================

# Feature flags for development
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_PREMIUM_FEATURES=true
ENABLE_BETA_FEATURES=true

# =====================================================
# MONITORING AND METRICS
# =====================================================

# Monitoring settings for development
ENABLE_METRICS=false
STATSD_HOST=localhost
STATSD_PORT=8125
STATSD_PREFIX=mingus.dev

# =====================================================
# CELERY CONFIGURATION
# =====================================================

# Celery settings for development
CELERY_ALWAYS_EAGER=false
CELERY_WORKER_DISABLE_RATE_LIMITS=true
CELERY_WORKER_CONCURRENCY=2
CELERY_WORKER_MAX_TASKS_PER_CHILD=100
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# =====================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =====================================================

# Development server settings
HOST=127.0.0.1
PORT=5002

# Auto-reload settings
AUTO_RELOAD=true
RELOAD_EXTRA_FILES=templates,static

# Development database settings
DB_AUTO_MIGRATE=true
DB_SEED_DATA=true

# Development email settings
EMAIL_PREVIEW=true
EMAIL_PREVIEW_PORT=1025

# Development SMS settings
SMS_PREVIEW=true
SMS_PREVIEW_FILE=logs/sms_preview.log

# =====================================================
# TESTING CONFIGURATION
# =====================================================

# Testing settings
TESTING=false
TEST_DATABASE_URL=postgresql://mingus_user:mingus_password@localhost:5432/mingus_test

# Test data settings
TEST_DATA_SIZE=100
TEST_DATA_SEED=12345

# =====================================================
# PERFORMANCE SETTINGS
# =====================================================

# Performance settings for development
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_MONITORING_INTERVAL=60
SLOW_QUERY_THRESHOLD=1000

# =====================================================
# BACKUP AND MAINTENANCE
# =====================================================

# Backup settings for development
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=gzip

# =====================================================
# NOTES
# =====================================================

# This configuration is optimized for development with:
# - Mock services for external APIs
# - Relaxed rate limiting
# - Detailed logging
# - Debug tools enabled
# - Testing helpers available
# - Security settings relaxed

# To use this configuration:
# 1. Copy this file to .env.development
# 2. Modify values as needed for your development environment
# 3. Ensure required services (PostgreSQL, Redis) are running
# 4. Run the application with FLASK_ENV=development

# For production deployment, use the production configuration
# which has stricter security, rate limiting, and monitoring. 