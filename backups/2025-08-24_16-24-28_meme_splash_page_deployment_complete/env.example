# =====================================================
# MINGUS APPLICATION - ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your actual values

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=backend/app.py
SECRET_KEY=your-super-secret-key-change-this-in-production
PORT=5000

# =====================================================
# DATABASE CONFIGURATION
# =====================================================
DATABASE_URL=postgresql://mingus:mingus123@localhost:5432/mingus_dev
DATABASE_TEST_URL=postgresql://mingus:mingus123@localhost:5432/mingus_test

# =====================================================
# REDIS CONFIGURATION
# =====================================================
REDIS_URL=redis://localhost:6379/0
REDIS_TEST_URL=redis://localhost:6379/1

# =====================================================
# SUPABASE CONFIGURATION
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# =====================================================
# AWS S3 CONFIGURATION (for meme image storage)
# =====================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=mingus-meme-images
AWS_REGION=us-east-1
AWS_S3_ENDPOINT_URL=https://s3.amazonaws.com
AWS_CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-distribution-id

# =====================================================
# IMAGE PROCESSING CONFIGURATION
# =====================================================
IMAGE_MAX_SIZE_MB=10
IMAGE_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp
IMAGE_OPTIMIZATION_QUALITY=85
IMAGE_THUMBNAIL_SIZE=300x300
IMAGE_PREVIEW_SIZE=800x600

# =====================================================
# MEME FEATURE CONFIGURATION
# =====================================================
MEME_CACHE_TTL=3600
MEME_RATE_LIMIT_PER_MINUTE=100
MEME_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
MEME_DEFAULT_CATEGORIES=faith,work_life,friendships,children,relationships,going_out
MEME_ANALYTICS_ENABLED=true
MEME_PREVIEW_ENABLED=true

# =====================================================
# PAYMENT PROCESSING (STRIPE)
# =====================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# =====================================================
# COMMUNICATION SERVICES
# =====================================================
RESEND_API_KEY=your-resend-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =====================================================
# MONITORING AND LOGGING
# =====================================================
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true

# =====================================================
# SECURITY CONFIGURATION
# =====================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-domain.com
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PASSWORD_SALT_ROUNDS=12

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_UPLOAD=10/hour
RATE_LIMIT_API=1000/hour

# =====================================================
# CELERY CONFIGURATION
# =====================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# =====================================================
# DEVELOPMENT SPECIFIC
# =====================================================
DEBUG_TB_ENABLED=true
DEBUG_TB_INTERCEPT_REDIRECTS=false
FLASK_DEBUG_TB_PROFILER_ENABLED=true

# =====================================================
# TESTING CONFIGURATION
# =====================================================
TESTING=true
TEST_DATABASE_URL=postgresql://mingus:mingus123@localhost:5432/mingus_test
COVERAGE_ENABLED=true

# =====================================================
# FEATURE FLAGS
# =====================================================
ENABLE_MEME_FEATURE=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_PAYMENTS=true
ENABLE_ARTICLE_LIBRARY=true 