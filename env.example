# =====================================================
# Mingus Meme Splash Page - Environment Variables
# Copy this file to .env and update with your values
# =====================================================

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///app/mingus_memes.db
# For PostgreSQL: postgresql://username:password@localhost:5432/mingus_memes

# File Upload Configuration
UPLOAD_FOLDER=/app/static/uploads
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# AWS S3 Configuration (for image storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1
CDN_URL=https://your-cdn-domain.com

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_DB=mingus_memes
POSTGRES_USER=mingus
POSTGRES_PASSWORD=your-postgres-password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/mingus-meme-app.log

# Security Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-new-relic-key

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MOOD_TRACKING=true
ENABLE_IMAGE_OPTIMIZATION=true
ENABLE_CDN=true

# Performance Configuration
WORKERS=4
TIMEOUT=120
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
