# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# Enhanced Income Comparison Calculator - Mingus Platform
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://mingus_user:${POSTGRES_PASSWORD}@postgres:5432/mingus
POSTGRES_DB=mingus
POSTGRES_USER=mingus_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# API KEYS (All Free Tiers)
# =============================================================================

# Bureau of Labor Statistics (BLS) - Free API, no key needed
BLS_API_KEY=""

# US Census Bureau - Free API key
CENSUS_API_KEY=your_free_census_key_here

# Federal Reserve Economic Data (FRED) - Free API key
FRED_API_KEY=your_free_fred_key_here

# Bureau of Economic Analysis (BEA) - Free API key
BEA_API_KEY=your_free_bea_key_here

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
ML_MODEL_PATH=/app/models/
ML_CACHE_TTL=604800  # 1 week in seconds
PREDICTION_CONFIDENCE_THRESHOLD=0.7
MODEL_UPDATE_FREQUENCY_HOURS=168  # 1 week

# =============================================================================
# LEAD GENERATION SETTINGS
# =============================================================================
LEAD_CAPTURE_CONVERSION_GOAL=0.25  # 25% email capture rate
EMAIL_SEQUENCE_DELAY_HOURS=72
LEAD_SCORING_ENABLED=true
GAMIFICATION_ENABLED=true
PROGRESSIVE_DISCLOSURE_ENABLED=true

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your_very_secure_secret_key_here_minimum_50_characters
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_CONTENT_TYPE_NOSNIFF=true
X_FRAME_OPTIONS=DENY

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token_here
HOTJAR_ID=your_hotjar_id_here

# =============================================================================
# PERFORMANCE AND CACHING
# =============================================================================
CACHE_TTL=3600  # 1 hour
STATIC_FILES_TTL=31536000  # 1 year
API_RATE_LIMIT_PER_MINUTE=100
CELERY_WORKER_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=300  # 5 minutes

# =============================================================================
# BACKUP AND STORAGE
# =============================================================================
BACKUP_S3_BUCKET=mingus-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
BACKUP_RETENTION_DAYS=30
MEDIA_STORAGE_BACKEND=django.core.files.storage.FileSystemStorage

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
GRAFANA_PASSWORD=your_secure_grafana_password
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs/mingus.log
PROMETHEUS_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SALARY_BENCHMARKING=true
ENABLE_CAREER_SIMULATION=true
ENABLE_PROGRESSIVE_LEAD_CAPTURE=true
ENABLE_GAMIFICATION=true
ENABLE_EMAIL_SEQUENCES=true
ENABLE_ANALYTICS=true
ENABLE_A_B_TESTING=false

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================
SLACK_WEBHOOK_URL=your_slack_webhook_url
ZAPIER_WEBHOOK_URL=your_zapier_webhook_url
HUBSPOT_API_KEY=your_hubspot_api_key
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Salary Benchmarking
SALARY_DATA_UPDATE_FREQUENCY_HOURS=24
BENCHMARK_SAMPLE_SIZE_MINIMUM=100
CONFIDENCE_INTERVAL_LEVEL=0.95

# Career Simulation
SIMULATION_ACCURACY_THRESHOLD=0.8
MAX_SIMULATION_YEARS=10
SKILL_IMPACT_MULTIPLIER=1.0

# Lead Scoring
LEAD_SCORE_DECAY_DAYS=30
ENGAGEMENT_WEIGHT=0.4
CONVERSION_WEIGHT=0.6

# Email Marketing
EMAIL_OPEN_RATE_THRESHOLD=0.15
EMAIL_CLICK_RATE_THRESHOLD=0.05
MAX_EMAILS_PER_LEAD_PER_MONTH=8

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================
ENABLE_DEBUG_TOOLBAR=false
ENABLE_SQL_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true
TEST_MODE=false

# =============================================================================
# SSL AND DOMAIN SETTINGS
# =============================================================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/cert.pem
SSL_PRIVATE_KEY_PATH=/etc/nginx/ssl/key.pem
DOMAIN_NAME=yourdomain.com
WWW_DOMAIN=www.yourdomain.com

# =============================================================================
# THIRD-PARTY SERVICE LIMITS
# =============================================================================
BLS_API_RATE_LIMIT=1000  # requests per day
CENSUS_API_RATE_LIMIT=500  # requests per day
FRED_API_RATE_LIMIT=120  # requests per minute
BEA_API_RATE_LIMIT=1000  # requests per day

# =============================================================================
# NOTIFICATIONS AND ALERTS
# =============================================================================
ALERT_EMAIL_ADDRESS=alerts@yourdomain.com
SYSTEM_ADMIN_EMAIL=admin@yourdomain.com
ERROR_NOTIFICATION_ENABLED=true
PERFORMANCE_ALERT_THRESHOLD=2000  # milliseconds

# =============================================================================
# DATA RETENTION AND PRIVACY
# =============================================================================
USER_DATA_RETENTION_DAYS=2555  # 7 years
ANONYMOUS_DATA_RETENTION_DAYS=365  # 1 year
GDPR_COMPLIANCE_ENABLED=true
DATA_ENCRYPTION_ENABLED=true

# =============================================================================
# SCALING AND RESOURCE LIMITS
# =============================================================================
MAX_CONCURRENT_USERS=1000
MAX_DATABASE_CONNECTIONS=100
REDIS_MAX_MEMORY=512mb
CELERY_MAX_TASKS_PER_CHILD=1000

# =============================================================================
# DEPLOYMENT SPECIFIC
# =============================================================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=v1.0.0
AUTO_SCALING_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health/
MAINTENANCE_MODE=false 